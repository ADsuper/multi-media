<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 溢出菜单图标颜色,设置 toolbar 的左侧和右侧图标的颜色-->
        <item name="colorControlNormal">@android:color/white</item>

        <!--android:listDivider 是为了设置 recyclerview 的分割线的颜色高度等信息-->
        <item name="android:listDivider">@drawable/shape_line</item>


        <item name="android:windowIsTranslucent">false</item>//就是关掉这个Activity的透明背景

    </style>

    <style name="GuideTheme" parent="AppTheme">
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--floatactionbutton-->
    <style name="floatactionbutton_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="SwipeBackHelper_theme" parent="AppTheme">

        //背景透明，不设滑动关闭时背景就是黑的。
        <item name="android:windowIsTranslucent">true</item>
        //Activity右滑进出的动画，觉得这个不好看随便换成自己的
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>

    </style>

</resources>
